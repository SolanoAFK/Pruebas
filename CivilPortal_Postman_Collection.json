{
  "info": {
    "name": "Civil Portal API",
    "description": "Colección completa de endpoints para testing",
    "version": "1.0",
    "baseUrl": "http://localhost:8081"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "PUBLIC ENDPOINTS",
      "item": [
        {
          "name": "Landing Page",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/",
            "description": "Landing pública de la aplicación"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health",
            "description": "Verificar que el servidor está activo"
          }
        }
      ]
    },
    {
      "name": "AUTHENTICATION",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"admin\",\"password\":\"admin123\"}"
            },
            "description": "Autenticar usuario y obtener JWT token"
          }
        },
        {
          "name": "Auth Ping",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/ping",
            "description": "Health check de autenticación"
          }
        }
      ]
    },
    {
      "name": "USUARIOS",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/usuarios",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "description": "Obtener listado de todos los usuarios"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/usuarios/2",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "description": "Obtener usuario específico (cambiar 2 por el ID deseado)"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/usuarios",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"username\":\"nuevo_usuario\",\"passwordHash\":\"password123\",\"nombres\":\"Juan\",\"apellidos\":\"Pérez\",\"email\":\"juan@example.com\",\"estado\":1}"
            },
            "description": "Crear nuevo usuario"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/usuarios/2",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"nombres\":\"Juan Carlos\",\"email\":\"nuevoemail@example.com\"}"
            },
            "description": "Actualizar información del usuario"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/usuarios/2",
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "description": "Eliminar usuario (cambiar 2 por el ID a eliminar)"
          }
        }
      ]
    },
